<p id="notice"><%= notice %></p>
<div class="jumbotron">
	<h1><%= @event.title %></h1>
<div class="row">
  <div class="col-md-4">
	<%= image_tag @event.eventlogo.url(:thumb) %>
  </div>
  <div class="col-md-4">
	<%= image_tag @event.eventlogo.url(:thumb) %>
  </div>
  <div class="col-md-4">
	<%= image_tag @event.eventlogo.url(:thumb) %>
  </div>
</div>
</div>
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Nationality</th>
      </tr>
    </thead>
    <tbody>
    <% @event.athletes.each do |athlete| %>
      <tr class="success">
        <td><%= link_to athlete.name, new_run_path(@event), class: "btn btn-success"  %></td>
        <td>USA</td>
		<% athlete.runs.where(:event_id => @event).order(score: :desc).each do |run| %>
		<td>
	  		<%= link_to run.score, run, class: "btn btn-error" %>
        </td>
	  	<% end %>
  <% end %>        
      </tr>
    </tbody>
  </table>

<%= link_to 'New Run', new_run_path(@event) %> | 
<%= link_to 'Edit', edit_event_path(@event) %> | 
<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
<br><br>
<%= link_to 'Events', events_path %> |
<%= link_to 'Athletes', athletes_path %>

</div>